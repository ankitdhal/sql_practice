
--CURRENT TIMESTAMP
SELECT CURRENT_TIMESTAMP;

SELECT CONVERT_TIMEZONE('UTC',CURRENT_TIMESTAMP) AS UTC_TIMEZONE;

--CURRENT TIME
SELECT CURRENT_TIME;


--CURRENT DATE

SELECT CURRENT_DATE;

--CONVERT DATE TO 4 MONTHS AHEAD
SELECT ADD_MONTHS(CURRENT_DATE,5) AS MONTHS_5_AHEAD;
SELECT ADD_MONTHS(CURRENT_TIMESTAMP,5) AS DEMOM;
SELECT ADD_MONTHS(CURRENT_DATE,-2) AS MONTHS_2_PREV;
select add_months(current_date, 1) as month_Ahead;

--datediff

SELECT DATEDIFF('DAY','2022-05-01',CURRENT_DATE);

--SELECT DATEDIFF('DAY',ORDER_DATE,SHIPPING_DATE);

SELECT DATEDIFF('MONTH','2022-06-23',CURRENT_DATE) AS SHIPPING_DATE;

SELECT DATEDIFF('YEAR', '2012-03-26',CURRENT_DATE) AS PAST_YEAR;


---DATEADD

SELECT DATEADD('DAY',20,CURRENT_DATE);
SELECT DATEADD('MONTH',12,CURRENT_DATE);
SELECT DATEADD('YEAR',-2,'2023-03-26');

SELECT DATE(CURRENT_DATE);
SELECT WEEK(CURRENT_DATE);
SELECT YEAR(CURRENT_DATE);
SELECT MONTH(CURRENT_TIMESTAMP);
SELECT MONTH(DATEADD('MONTH',23,CURRENT_DATE));

--CHANGES DATE TO ANY OTHER FORMAT OR TO CHAR
SELECT TO_CHAR(ADD_MONTHS(CURRENT_DATE,4),'DD-MM-YYYY') AS DATE_DEMO;
SELECT TO_CHAR(CURRENT_DATE,'DD-MM-YYYY');


--DATE_TRUNC

SELECT DATE_TRUNC('YEAR',CURRENT_DATE) AS YEAR_FROM_DATE;

SELECT DATE(CURRENT_DATE);

SELECT DATE_TRUNC('DAY',CURRENT_DATE)
  AS DAY_FROM_DATE;
  
 SELECT DATE_TRUNC('MONTH',CURRENT_DATE)
  AS MONTH_FROM_DATE; 

--LASTDAY

SELECT LAST_DAY(CURRENT_DATE);
SELECT QUARTER(CURRENT_DATE) AS QTR;
SELECT LAST_DAY(CURRENT_DATE) AS LAST_DAY_CURRENT_MONTH;


--LAST DAY OF PREVIOUS MONTH

SELECT LAST_DAY(CURRENT_DATE-INTERVAL '1 MONTH') AS LAST_DAY_PREV;
SELECT LAST_DAY(CURRENT_DATE - INTERVAL '2 MONTH') + INTERVAL '1 DAY' AS FIRST_DAY;

---EXTRACT

SELECT EXTRACT(YEAR FROM CURRENT_DATE) AS YEAR;

SELECT DATE_TRUNC('YEAR', CURRENT_DATE);

SELECT QUARTER(CURRENT_DATE);

SELECT QUARTER(TO_DATE('23-04-1997','DD-MM-YYYY'));

SELECT TO_CHAR(TO_DATE(CURRENT_DATE),'DD-MM-YYYY') AS DEMO_DATE;

SELECT EXTRACT('YEAR', CURRENT_dATE);

SELECT TO_CHAR(TO_DATE('1993-04-23'),'DD-MM-YYYY');
SELECT TO_CHAR(TO_DATE('1993-04-23'),'MM-YYYY');

SELECT TO_CHAR(TO_DATE(CURRENT_DATE),'DD-DY-MMMM-YYYY');





